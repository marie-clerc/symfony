{% extends 'base.html.twig' %}

{% block body %}

    <h1>Se connecter</h1>

    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input placeholder="email" require name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="mot de passe" require name="_password" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion ! </button>
        </div>
    </form>

{% endblock %}